@model FriendlyForms.Models.ParentingPlanViewModel
<div class="row-fluid">
    <h2 class="span4">Child's Name</h2>
    <h2 class="span4">Date of Birth</h2>
</div>
@foreach (var child in Model.ChildAllViewModel.ChildViewModel.Children)
{
    <div class="row-fluid">
        <div class="span4 indented">@child.Name</div>
        <div class="span4">
            @if (child.DateOfBirth.HasValue)
            {
                <span class="indented">@child.DateOfBirth.Value.ToString("MM/dd/yyyy")</span>;
            }
            else
            {
                @:Not Provided
            }
        </div>
    </div>
}
<div class="row-fluid">
    <h2>Custody and Decision Making</h2>
    <p class="indented">@Model.PpOutputFormHelper.CustodyInformation.LegalCustodyPhrase
    </p>
</div>
<h2>Primary Physical Custody</h2>
<p class="indented">For each of the children named below, the primary physical custodian shall be:</p>
@foreach (var child in Model.ChildAllViewModel.ChildViewModel.Children)
{
    <div class="row-fluid">
        <div class="span2 indented">@child.Name</div>
        <div class="span2">@Model.PpOutputFormHelper.CustodyInformation.Parent</div>
    </div>
}
<p class="indented">
    <br />WHERE JOINT PHYSICAL CUSTODY IS CHOSEN BY THE PARENTS OR ORDERED
        BY THE COURT, A DETAILED PLAN OF THE LIVING ARRANGEMENTS OF THE
        CHILD(REN) SHALL BE ATTACHED AND MADE A PART OF THIS PARENTING PLAN.
</p>
