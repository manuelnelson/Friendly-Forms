@using FriendlyForms.Authentication
@model BusinessLogic.Models.AllFinancialViewModel
@{
    ViewBag.Title = "Financial";
}

@section Sidebar{
    @{
        var itemDone = "icon-ok icon-green";
        var itemlock = "";  
    }
    <a href="@Url.Action("Index", "Home")" class="visible-phone"><i class="icon icon-home"></i>Home</a>
    <ul>
        <li><a href="@Url.Action("DomesticMediation","Forms")"><i class="icon icon-th-list"></i>Mediation Agreement</a></li>
        <li><a href="@Url.Action("Parenting","Forms")"><i class="icon icon-th-list"></i>Parenting Plan</a></li>
        <li class="submenu open"><a href="#"><i class="icon icon-th-list"></i>Financial Form</a>
            <ul style="display: block">
                <li class="nav-item active" id="incomeNav"><a data-form="income" href="#"><i class="icon-pencil icon-blue"></i>Income (Father)</a></li>
                @if (Model.FinancialFormsCompleted.SocialSecurity)
                {
                    <li class="nav-item" id="socialSecurityNav"><a data-form="socialSecurity" href="#"><i class="@itemDone"></i>Social Security (Father)</a></li>
                }
                else
                {
                    <li class="nav-item" id="socialSecurityNav"><a data-form="socialSecurity" href="#"><i class="@itemlock"></i>Social Security (Father)</a></li>
                }
                @if (Model.FinancialFormsCompleted.Preexisting)
                {
                    <li class="nav-item" id="preexistingSupportNav"><a data-form="preexistingSupport" href="#"><i class="@itemDone"></i>Preexisting Support (Father)</a></li>
                }
                else
                {
                    <li class="nav-item" id="preexistingSupportNav"><a data-form="preexistingSupport" href="#"><i class="@itemlock"></i>Preexisting Support (Father)</a></li>
                }
                @if (Model.FinancialFormsCompleted.OtherChildren)
                {
                    <li class="nav-item" id="otherChildrenNav"><a data-form="otherChildren" href="#"><i class="@itemDone"></i>Other Children (Father)</a></li>
                }
                else
                {
                    <li class="nav-item" id="otherChildrenNav"><a data-form="otherChildren" href="#"><i class="@itemlock"></i>Other Children (Father)</a></li>
                }
                @if (Model.FinancialFormsCompleted.SpecialCircumstance)
                {
                    <li class="nav-item" id="specialCircumstancesNav"><a data-form="specialCircumstances" href="#"><i class="@itemDone"></i>Circumstances (Father)</a></li>
                }
                else
                {
                    <li class="nav-item" id="specialCircumstancesNav"><a data-form="specialCircumstances" href="#"><i class="@itemlock"></i>Circumstances (Father)</a></li>
                }
                @if (Model.FinancialFormsCompleted.IncomeOther)
                {
                    <li class="nav-item" id="incomeOtherNav"><a data-form="incomeOther" href="#"><i class="@itemDone"></i>Income (Mother)</a></li>
                }
                else
                {
                    <li class="nav-item" id="incomeOtherNav"><a data-form="incomeOther" href="#"><i class="@itemlock"></i>Income (Mother)</a></li>
                }
                @if (Model.FinancialFormsCompleted.SocialSecurityOther)
                {
                    <li class="nav-item" id="socialSecurityOtherNav"><a data-form="socialSecurityOther" href="#"><i class="@itemDone"></i>Social Security (Mother)</a></li>
                }
                else
                {
                    <li class="nav-item" id="socialSecurityOtherNav"><a data-form="socialSecurityOther" href="#"><i class="@itemlock"></i>Social Security (Mother)</a></li>
                }
                @if (Model.FinancialFormsCompleted.PreexistingOther)
                {
                    <li class="nav-item" id="preexistingSupportOtherNav"><a data-form="preexistingSupportOther" href="#"><i class="@itemDone"></i>Preexisting Support (Mother)</a></li>
                }
                else
                {
                    <li class="nav-item" id="preexistingSupportOtherNav"><a data-form="preexistingSupportOther" href="#"><i class="@itemlock"></i>Preexisting Support (Mother)</a></li>
                }
                @if (Model.FinancialFormsCompleted.OtherChildrenOther)
                {
                    <li class="nav-item" id="otherChildrenOtherNav"><a data-form="otherChildrenOther" href="#"><i class="@itemDone"></i>Other Children (Mother)</a></li>
                }
                else
                {
                    <li class="nav-item" id="otherChildrenOtherNav"><a data-form="otherChildrenOther" href="#"><i class="@itemlock"></i>Other Children (Mother)</a></li>
                }
                @if (Model.FinancialFormsCompleted.SpecialCircumstanceOther)
                {
                    <li class="nav-item" id="specialCircumstancesOtherNav"><a data-form="specialCircumstancesOther" href="#"><i class="@itemDone"></i>Circumstances (Mother)</a></li>
                }
                else
                {
                    <li class="nav-item" id="specialCircumstancesOtherNav"><a data-form="specialCircumstancesOther" href="#"><i class="@itemlock"></i>Circumstances (Mother)</a></li>
                }
            </ul>
        </li>
        <li><a href="@Url.Action("LogOff","Account")"><i class="icon icon-share-alt"></i>Log Out</a></li>
    </ul>
}
@section Breadcrumb{
    <div id="breadcrumb">
        <a data-form="asdfa" href="@Url.Action("Index", "Home")" title="Go to Home" class="tip-bottom"><i class="icon-home"></i>Home</a>
        <a data-form="asdfa" href="#" class="current">Financial</a>
    </div>
}
<input type="hidden" id="user-id" value="@User.FriendlyIdentity().UserId" /> 
@Html.Partial("_Income", Model.IncomeViewModel)
@Html.Partial("_SocialSecurity", Model.SocialSecurityViewModel)
@Html.Partial("_PreexistingSupport", Model.PreexistingSupportViewModel)
@Html.Partial("_OtherChildren", Model.OtherChildrenViewModel)
@Html.Partial("_SpecialCircumstance", Model.SpecialCircumstancesViewModel)
@Html.Partial("_IncomeOther", Model.IncomeOtherViewModel)
@Html.Partial("_SocialSecurityOther", Model.SocialSecurityOtherViewModel)
@Html.Partial("_PreexistingSupportOther", Model.PreexistingSupportOtherViewModel)
@Html.Partial("_OtherChildrenOther", Model.OtherChildrenOtherViewModel)
@Html.Partial("_SpecialCircumstanceOther", Model.SpecialCircumstancesOtherViewModel)
