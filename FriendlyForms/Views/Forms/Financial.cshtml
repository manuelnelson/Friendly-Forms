                    <li class="nav-item" id="socialSecurityNav"><a data-form="socialSecurity" href="#"><i class="@itemlock"></i>Social Security (Father)</a></li>
                }
                @if (Model.FinancialFormsCompleted.Preexisting)
                {
                    <li class="nav-item" id="preexistingSupportNav"><a data-form="preexistingSupport" href="#"><i class="@itemDone"></i>Preexisting Support (Father)</a></li>
                }
                else
                {
                    <li class="nav-item" id="preexistingSupportNav"><a data-form="preexistingSupport" href="#"><i class="@itemlock"></i>Preexisting Support (Father)</a></li>
                }
                @if (Model.FinancialFormsCompleted.OtherChildren)
                {
                    <li class="nav-item" id="otherChildrenNav"><a data-form="otherChildren" href="#"><i class="@itemDone"></i>Other Children (Father)</a></li>
                }
                else
                {
                    <li class="nav-item" id="otherChildrenNav"><a data-form="otherChildren" href="#"><i class="@itemlock"></i>Other Children (Father)</a></li>
                }
                @if (Model.FinancialFormsCompleted.Health)
                {
                    <li class="nav-item" id="healthsNav"><a data-form="healths" href="#"><i class="@itemDone"></i>Health Insurance (Father)</a></li>
                }
                else
                {
                    <li class="nav-item" id="healthsNav"><a data-form="healths" href="#"><i class="@itemlock"></i>Health Insurance (Father)</a></li>
                }                
                @if (Model.FinancialFormsCompleted.IncomeOther)
                {
                    <li class="nav-item" id="incomeOtherNav"><a data-form="incomeOther" href="#"><i class="@itemDone"></i>Income (Mother)</a></li>
                }
                else
                {
                    <li class="nav-item" id="incomeOtherNav"><a data-form="incomeOther" href="#"><i class="@itemlock"></i>Income (Mother)</a></li>
                }
                @if (Model.FinancialFormsCompleted.SocialSecurityOther)
                {
                    <li class="nav-item" id="socialSecurityOtherNav"><a data-form="socialSecurityOther" href="#"><i class="@itemDone"></i>Social Security (Mother)</a></li>
                }
                else
                {
                    <li class="nav-item" id="socialSecurityOtherNav"><a data-form="socialSecurityOther" href="#"><i class="@itemlock"></i>Social Security (Mother)</a></li>
                }
                @if (Model.FinancialFormsCompleted.PreexistingOther)
                {
                    <li class="nav-item" id="preexistingSupportOtherNav"><a data-form="preexistingSupportOther" href="#"><i class="@itemDone"></i>Preexisting Support (Mother)</a></li>
                }
                else
                {
                    <li class="nav-item" id="preexistingSupportOtherNav"><a data-form="preexistingSupportOther" href="#"><i class="@itemlock"></i>Preexisting Support (Mother)</a></li>
                }
