@model FriendlyForms.Models.FinancialViewModel
@{
    ViewBag.Title = "Financial";
}

@section Sidebar{
    @{
        var itemDone = "icon-ok icon-green";
        var itemlock = "";  
    }
    <a href="@Url.Action("Index", "Home",new {Id=@Model.FormUserId})" class="visible-phone"><i class="icon icon-home"></i>Home</a>
    <ul>
        <li><a href="@Url.Action("DomesticMediation","Forms",new {Id=@Model.FormUserId})"><i class="icon icon-th-list"></i>Mediation Agreement</a></li>
        <li><a href="@Url.Action("Parenting","Forms",new {Id=@Model.FormUserId})"><i class="icon icon-th-list"></i>Parenting Plan</a></li>
        <li class="submenu open"><a href="#"><i class="icon icon-th-list"></i>Financial Form</a>
            <ul style="display: block">
                <li class="nav-item active" id="deviationsNav"><a data-form="deviations" href="#"><i class="icon-pencil icon-blue"></i>Deviations</a></li>
                @if (Model.FinancialFormsCompleted.ChildCareForm)
                {
                    <li class="nav-item" id="childCareNav"><a data-form="childCare" href="#"><i class="@itemDone"></i>Child Care</a></li>
                }
                else
                {
                    <li class="nav-item" id="childCareNav"><a data-form="childCare" href="#"><i class="@itemlock"></i>Child Care</a></li>
                }
                @if (Model.FinancialFormsCompleted.Income)
                {
                    <li class="nav-item" id="incomeNav"><a data-form="income" href="#"><i class="@itemDone"></i>Income (Father)</a></li>
                }
                else
                {
                    <li class="nav-item" id="incomeNav"><a data-form="income" href="#"><i class="@itemlock"></i>Income (Father)</a></li>
                }
                @if (Model.FinancialFormsCompleted.SocialSecurity)
