                {
                    <li class="nav-item" id="otherChildrenOtherNav"><a data-form="otherChildrenOther" href="#"><i class="@itemDone"></i>Other Children (Mother)</a></li>
                }
                else
                {
                    <li class="nav-item" id="otherChildrenOtherNav"><a data-form="otherChildrenOther" href="#"><i class="@itemlock"></i>Other Children (Mother)</a></li>
                }
                @if (Model.FinancialFormsCompleted.HealthOther)
                {
                    <li class="nav-item" id="healthsOtherNav"><a data-form="healthsOther" href="#"><i class="@itemDone"></i>Health Insurance (Mother)</a></li>
                }
                else
                {
                    <li class="nav-item" id="healthsOtherNav"><a data-form="healths" href="#"><i class="@itemlock"></i>Health Insurance (Mother)</a></li>
                }                

            </ul>
        </li>
        <li><a href="@Url.Action("LogOff","Account")"><i class="icon icon-share-alt"></i>Log Out</a></li>
    </ul>
}
@section Breadcrumb{
    <div id="breadcrumb">
        <a data-form="asdfa" href="@Url.Action("Index", "Home",new {Id=@Model.FormUserId})" title="Go to Home" class="tip-bottom"><i class="icon-home"></i>Home</a>
        <a data-form="asdfa" href="#" class="current">Financial</a>
    </div>
}
