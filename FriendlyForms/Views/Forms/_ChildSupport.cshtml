@using Models.ViewModels
@model ChildSupportViewModel
<div class="form-vertical wrapper hide" id="supportWrapper">
    @using (Html.BeginForm("Parenting", "Forms", FormMethod.Post, new { id = "support" }))
    {
        <div class="row-fluid">
            <div class="span12">
                <div class="widget-box">
                    <div class="widget-title">
                        <span class="icon"><i class="icon-signal"></i></span>
                        <h5>Child Support</h5>
                    </div>
                    <div class="widget-content">
                        <div class="control-group">
                            <label class="form-question">
                                Is this agreement temporary or final?</label>
                            <label class="radio">This is a temporary agreement. If selected, you are not requried to fill out the Child Support Form. @Html.RadioButtonFor(m => m.TemporaryAgreement, (int)YesNo.Yes)</label>
                            <label class="radio">This is a final agreement. This following information will automatically display here once you’ve completed the Child Support section of the application.  @Html.RadioButtonFor(m => m.TemporaryAgreement, (int)YesNo.No)</label>
                            @Html.ValidationMessageFor(m => m.TemporaryAgreement)
                        </div>
                        <div class="control-group support-info">
                            <label class="form-question">Child support will be paid by</label>
                            @Html.TextBoxFor(m => m.PaidBy, new { placeholder = "Paid By" })
                            @Html.ValidationMessageFor(m => m.PaidBy)
                        </div>
                        <div class="control-group support-info">
                            <label class="form-question">Child support payments will be paid to</label>
                            @Html.TextBoxFor(m => m.PaidTo, new { placeholder = "Paid To" })
                            @Html.ValidationMessageFor(m => m.PaidTo)
                        </div>
                        <div class="control-group support-info">
                            <label class="form-question">Enter the amount of monthly child support.</label>
                            @Html.TextBoxFor(m => m.MonthlyAmount, new { placeholder = "Monthly Amount" })
                            @Html.ValidationMessageFor(m => m.MonthlyAmount)
                        </div>
                        <div class="control-group support-info">
                            <label class="form-question">Effective date</label>
                            @Html.TextBoxFor(m => m.EffectiveDate, new { placeholder = "Date", @class = "datepicker", data_date = @DateTime.Now.ToString("MM/dd/yyyy") })
                            @Html.ValidationMessageFor(m => m.EffectiveDate)
                        </div>
                        <div class="control-group">
                            <label class="form-question">
                                How will child support be paid?</label>
                            <label class="radio">Child support will be paid by payroll deduction @Html.RadioButtonFor(m => m.Payment, (int)YesNo.Yes)</label>
                            <label class="radio">Remitted directly from payor to payee  @Html.RadioButtonFor(m => m.Payment, (int)YesNo.No)</label>
                            @Html.ValidationMessageFor(m => m.Payment)
                        </div>
                        @if (Model.Payment==((int)YesNo.No))
                        {
                            <div class="control-group support-payday">
                                <label class="form-question">Child support payment will be due to the recipient on what day of each month? Enter number 1-31 (31 designates last day of month every month, regardless of the number of days in that particular month)</label>
                                @Html.TextBoxFor(m => m.PaymentDay, new { placeholder = "Day" })
                                @Html.ValidationMessageFor(m => m.PaymentDay)
                            </div>                
                        }
                        else
                        {
                            <div class="control-group support-payday hide">
                                <label class="form-question">Child support payment will be due to the recipient on what day of each month? Enter number 1-31 (31 designates last day of month every month, regardless of the number of days in that particular month)</label>
                                @Html.TextBoxFor(m => m.PaymentDay, new { placeholder = "Day" })
                                @Html.ValidationMessageFor(m => m.PaymentDay)
                            </div>                
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    <button class="btn btn-primary domestic-part9 next">Continue <i class="icon-arrow-right icon-white"></i></button>
</div>
