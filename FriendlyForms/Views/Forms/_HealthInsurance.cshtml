@using Models.ViewModels
@model HealthInsuranceViewModel
<div class="form-vertical wrapper hide" id="healthInsuranceWrapper">
    @using (Html.BeginForm("Parenting", "Forms", FormMethod.Post, new { id = "healthInsurance" }))
    {
        <div class="row-fluid">
            <div class="span12">
                <div class="widget-box">
                    <div class="widget-title">
                        <span class="icon"><i class="icon-signal"></i></span>
                        <h5>Health Insurance Information</h5>
                    </div>
                    <div class="widget-content">
            <div class="control-group">
                <label class="informative">
                    Will both parties be solely responsible for providing their own health insurance following the divorce?</label>
                <label class="radio">Yes @Html.RadioButtonFor(m => m.Health, (int)YesNo.Yes)</label>
                <label class="radio">No @Html.RadioButtonFor(m => m.Health, (int)YesNo.No)</label>
                @Html.ValidationMessageFor(m => m.Health)
            </div>
            @if(Model.Health.Equals((int)YesNo.No))
            {
            <div class="control-group health-detail">
                <label class="informative">
                    How will health insurance be funded?</label>
                @Html.TextAreaFor(m => m.HealthDescription, new { placeholder = "Details", @class="input-xxlarge" })
                @Html.ValidationMessageFor(m => m.HealthDescription)
            </div>                
            } else
            {
            <div class="control-group health-detail hide">
                <label class="informative">
                    How will health insurance be funded?</label>
                @Html.TextAreaFor(m => m.HealthDescription, new { placeholder = "Details", @class="input-xxlarge" })
                @Html.ValidationMessageFor(m => m.HealthDescription)
            </div>                
            }
                    </div>
                </div>
            </div>
        </div>
    }
    <button class="btn btn-primary domestic-part6 next">Continue <i class="icon-arrow-right icon-white"></i></button>
</div>
