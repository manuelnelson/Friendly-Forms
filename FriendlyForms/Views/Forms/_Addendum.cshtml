@using Models.ViewModels
@model AddendumViewModel
<div class="form-vertical wrapper hide" id="addendumWrapper">
    @using (Html.BeginForm("Parenting", "Forms", FormMethod.Post, new { id = "addendum" }))
    {
        <div class="row-fluid">
            <div class="span12">
                <div class="widget-box">
                    <div class="widget-title">
                        <span class="icon"><i class="icon-signal"></i></span>
                        <h5>Special Considerations</h5>
                    </div>
                    <div class="widget-content">
                        <div class="control-group">
                            <label class="form-question">
                                Are there any special circumstances which the Court should be made aware of?</label>
                            <label class="radio">Yes @Html.RadioButtonFor(m => m.HasAddendum, (int)YesNo.Yes)</label>
                            <label class="radio">No @Html.RadioButtonFor(m => m.HasAddendum, (int)YesNo.No)</label>
                            @Html.ValidationMessageFor(m => m.HasAddendum)
                        </div>
                        @if (Model.HasAddendum==((int)YesNo.Yes))
                        {            
                            <div class="control-group addendum-details ">
                                @Html.TextAreaFor(m => m.AddendumDetails, new { placeholder = "Details", @class = "input-xxlarge" })
                                @Html.ValidationMessageFor(m => m.AddendumDetails)
                            </div>
                
                        }
                        else
                        {
                            <div class="control-group addendum-details hide">
                                @Html.TextAreaFor(m => m.AddendumDetails, new { placeholder = "Details", @class = "input-xxlarge" })
                                @Html.ValidationMessageFor(m => m.AddendumDetails)
                            </div>                
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    <button class="btn btn-primary child-part11 next">Check Completion<i class="icon-arrow-right icon-white"></i></button>
    <p class="viewOutput hide"><span class="informative">Congratulations!</span> The parenting plan form is completely done.  Click the button below to view the output.</p>
    <button class="btn btn-primary next viewOutput hide" id="ViewOutput" data-url='/Output/Parenting/' value="View">View Output<i class="icon-arrow-right icon-white"></i></button>
</div>
