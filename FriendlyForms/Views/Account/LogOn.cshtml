@model FriendlyForms.Models.LogOnModel
@{
    ViewBag.Title = "Log On";
}
@section Sidebar{
    <a href="@Url.Action("Index", "Home")" class="visible-phone"><i class="icon icon-home"></i>Home</a>
    <ul>
        <li><a href="@Url.Action("Index", "Home")"><i class="icon icon-home"></i><span>Home</span></a></li>
        <li><a href="@Url.Action("About", "Home")"><i class="icon icon-briefcase"></i><span>About</span></a></li>
        <li><a href="@Url.Action("About", "Home")"><i class="icon icon-question-sign"></i><span>Help</span></a></li>
    </ul>
}
<p>
    Please enter your user name and password. @*@Html.ActionLink("Register", "Register") if you don't have an account.*@
</p>

<div class="row-fluid">
    <form class="well form-vertical" id="login-form" action="/api/auth/credentials" data-continue="/">
        <fieldset>
            <legend>Account Information</legend>
            <div class="control-group">
                @Html.TextBoxFor(m => m.UserName, new { placeholder = "Email" })
                @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "help-inline" })
            </div>
            <div class="control-group">
                @Html.PasswordFor(m => m.Password, new { placeholder = "Password" })
                @Html.ValidationMessageFor(m => m.Password, null, new { @class = "help-inline" })
            </div>
            <input type="submit" id="submit" class="btn btn-primary" value="Log In" />
            <p style="margin-top: 10px;">@Html.ActionLink("Register", "Register") if you don't have an account.</p>
        </fieldset>
    </form>
</div>

