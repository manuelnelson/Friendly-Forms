@model BusinessLogic.Models.RegisterModel
@{
    ViewBag.Title = "Register";    
}
<h2>Create a New Account</h2>
<p>
    Passwords are required to be a minimum of @Membership.MinRequiredPasswordLength characters in length.
</p>
<div class="row-fluid">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "well form-vertical span4" })){
        @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
    <div>
        <fieldset>
            <legend>Account Information</legend>
            <div class="control-group">
                @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", style="width:90%"  })
                @Html.ValidationMessageFor(m => m.Email)
            </div>
            <div class="control-group">
                @Html.TextBoxFor(m => m.FirstName, new { placeholder = "First Name", style="width:90%"  })
                @Html.ValidationMessageFor(m => m.FirstName)
            </div>
            <div class="control-group">
                @Html.TextBoxFor(m => m.LastName, new { placeholder = "Last Name", style="width:90%"  })
                @Html.ValidationMessageFor(m => m.LastName)
            </div>
            <div class="control-group">
                @Html.PasswordFor(m => m.Password, new { placeholder = "Password", style="width:90%"  })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="control-group">
                @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", style="width:90%"  })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>
            <p>
                 <input type="submit" id="submit" class="btn btn-primary" value="Register" />
            </p>
        </fieldset>
    </div>
    }
</div>
